@model Registration
@{
    ViewData["Title"] = "RegistrationForm";
}

<h2>Registration Form For Seminar</h2>
<br />


<form asp-controller="Assignment" asp-action="DisplayForm" method="post">

    <div class="container d-flex justify-content-center align-items-center">
        <div class="card">
            <div class="row">
                <div class="col-md-6">
                    <div class="form">
                        <h2>Registration</h2>
                        <div> <div asp-validation-summary="All" class="text text-danger"></div></div>
                        <div class="inputbox mt-3">
                            <span>User Name</span>
                            <input type="text" placeholder="Name" asp-for="Username" class="form-control" />
                        </div>
                        <div class="inputbox mt-3">
                            <span>Email</span>
                            <input type="text" asp-for="Email" placeholder="Email" class="form-control" />
                        </div>
                        <div class="inputbox mt-3">
                            <span>Phone</span>

                            <input type="text" placeholder="+1 455 445 4532" asp-for="ContactNo" class="form-control" />
                        </div>

                        <div class="inputbox mt-3">
                            <span>Will Attend</span>
                            <select asp-for="WillAttend" class="form-control" aria-labelledby="btnDropdownDemo">
                                <option selected disabled>---Confirmation---</option>
                                <option class="dropdown-item" value="Yes">Yes, I can attend</option>
                                <option class="dropdown-item" value="No">No, I can't attend</option>
                            </select>
                        </div>
                        <br />
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-right"> <button class="btn btn-success register btn-block">Register</button> </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center mt-5"> <img src="https://i.imgur.com/98GXnDD.png" width="400"> </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






